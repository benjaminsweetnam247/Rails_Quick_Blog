<p id="notice"><%= notice %></p>

<%= render :partial => @post %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<h2>Comments</h2>
<div class="comments">
	<%= render :partial =>	 @post.comments %>
</div>

<%= form_form [@post, Comment.new] do |f| %>
	<p>
		<%= f.label :body, "New comment" %>
		<%= f.text_area :body %>
	</p>
	<p><%= f.submit "Add comment" %></p>
<% end %>